{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["bun-types"],
    "baseUrl": "src",
    "paths": {
      "@database/*": ["database/*"],
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"],
      "@events": ["events"]
    }
  },
  "include": ["src"],
  "exclude": [".db"]
}
